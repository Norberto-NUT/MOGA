<Page
    x:Class="JoystickTest.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:JoystickTest"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="40"/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <TextBlock FontSize="18" x:Name="controllerStatus" Grid.Row="1" HorizontalAlignment="Stretch"  />
        <TextBlock FontSize="18" x:Name="keyStatus" Grid.Row="2" HorizontalAlignment="Stretch"  />
        <TextBlock FontSize="18" x:Name="axisStatus" Grid.Row="3" HorizontalAlignment="Stretch" />
        <Button Content="Connect to MOGA controller" Grid.Row="5" HorizontalAlignment="Center" VerticalAlignment="Center" Click="Connect_Click"/>
    </Grid>
</Page>
